// Define o cliente que será usado (o Prisma Client para JavaScript)
generator client {
  provider = "prisma-client-js"
}

// Define a fonte de dados (nosso banco PostgreSQL)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---- MODELO DE USUÁRIO (Sem alteração) ----
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lists     GiftList[]
}

// ---- MODELO DA LISTA (Sem alteração) ----
model GiftList {
  id          String    @id @default(uuid())
  title       String
  description String?
  eventDate   DateTime?
  slug        String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relacionamento: A lista pertence a UM usuário
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relacionamento: Uma lista tem VÁRIAS "categorias"
  categories Category[]
}

// ---- MODELO CATEGORIA (ALTERADO) ----
model Category {
  id        String   @id @default(uuid())
  name      String   // Nome da categoria
  icon      String?
  order     Int?     // Ordem da categoria
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento: Categoria pertence a UMA lista
  listId String
  list   GiftList @relation(fields: [listId], references: [id], onDelete: Cascade)

  // Relacionamento: Categoria tem VÁRIOS itens
  items Item[]
}

// ---- MODELO DO ITEM (Sem alteração) ----
model Item {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Float?
  imageUrl    String?
  linkUrl     String?
  status      ItemStatus @default(AVAILABLE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  purchaserName  String?
  purchaserEmail String?

  // Relacionamento: Um item pertence a UMA "categoria"
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

// ---- ENUM DE STATUS (Sem alteração) ----
enum ItemStatus {
  AVAILABLE
  RESERVED
  PURCHASED
}


// --- NOVOS MODELOS PARA TEMPLATES ---

// Modelo principal do Template (Ex: "Chá de Bebê")
model ListTemplate {
  id          String   @id @default(uuid())
  name        String   @unique // "Chá de Bebê", "Lista de Casamento"
  description String?
  icon        String?  // (Opcional) Nome de um ícone (ex: 'baby', 'ring')
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamento: Um template tem VÁRIAS categorias
  categories TemplateCategory[]
}

// Modelo das categorias do Template (ALTERADO)
model TemplateCategory {
  id        String   @id @default(uuid())
  name      String
  icon      String?  
  createdAt DateTime @default(now())

  // Relacionamento: Pertence a UM template
  templateId String
  template   ListTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  // Relacionamento: Tem VÁRIOS itens
  items TemplateItem[]
}

// Modelo dos itens do Template (Sem alteração)
model TemplateItem {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float?   // Preço sugerido
  imageUrl    String?
  linkUrl     String?
  createdAt   DateTime @default(now())

  // Relacionamento: Pertence a UMA categoria de template
  categoryId String
  category   TemplateCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}