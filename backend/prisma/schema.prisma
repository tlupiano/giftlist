// Define o cliente que será usado (o Prisma Client para JavaScript)
generator client {
  provider = "prisma-client-js"
}

// Define a fonte de dados (nosso banco PostgreSQL)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---- MODELO DE USUÁRIO (Sem alteração) ----
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lists     GiftList[]
}

// ---- MODELO DA LISTA (Atualizado) ----
model GiftList {
  id          String    @id @default(uuid())
  title       String
  description String?
  eventDate   DateTime?
  slug        String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relacionamento: A lista pertence a UM usuário
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // --- MUDANÇA AQUI ---
  // Uma lista não tem mais "itens" diretos.
  // Uma lista agora tem VÁRIAS "categorias"
  categories Category[]
}

// ---- NOVO MODELO: CATEGORIA ----
// (Ex: "Cozinha", "Quarto", "Banheiro")
model Category {
  id        String   @id @default(uuid())
  name      String   // Nome da categoria
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento: Categoria pertence a UMA lista
  listId String
  list   GiftList @relation(fields: [listId], references: [id], onDelete: Cascade)

  // Relacionamento: Categoria tem VÁRIOS itens
  items Item[]
}

// ---- MODELO DO ITEM (Atualizado) ----
model Item {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Float?
  imageUrl    String?
  linkUrl     String?
  status      ItemStatus @default(AVAILABLE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  purchaserName  String?
  purchaserEmail String?

  // --- MUDANÇA AQUI ---
  // Um item não pertence mais a uma "lista"
  // Um item agora pertence a UMA "categoria"
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

// ---- ENUM DE STATUS (Sem alteração) ----
enum ItemStatus {
  AVAILABLE
  RESERVED
  PURCHASED
}
